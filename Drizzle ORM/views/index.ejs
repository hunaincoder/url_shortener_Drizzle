    <%- include('./partials/header') %> <% if(user) { %>
    <h2>you are logged in</h2>
    <% } else { %>
    <h2>you are not loged in</h2>
    <% }%>
    <div class="main">
      <section class="url-shortener">
        <div class="container">
          <div class="shortener-content">
            <div class="shortener-form">
              <h1 class="form-title">URL Shortener</h1>
              <form action="/" method="post" class="url-form" id="url-form">
                <div class="form-group">
                  <label for="url">
                    <i class="zmdi zmdi-link"></i>
                  </label>
                  <input
                    type="url"
                    name="url"
                    id="url"
                    placeholder="Enter URL"
                    required
                  />
                </div>
                <div class="form-group">
                  <label for="shortcode">
                    <i class="zmdi zmdi-code"></i>
                  </label>
                  <input
                    type="text"
                    name="shortcode"
                    id="shortcode"
                    placeholder="Enter custom short code"
                    required
                  />
                </div>
                <div class="form-group form-button">
                  <input
                    type="submit"
                    name="shorten"
                    id="shorten"
                    class="form-submit"
                    value="Shorten"
                  />
                </div>
              </form>
            </div>
            <div class="shortened-urls">
              <h2 class="section-title">Shortened URLs</h2>
              <% if(link && link.length > 0) { %>
              <ul class="url-list">
                <% link.map(({shortcode, url}) => { %> <% const truncatedUrl =
                url.length >= 30 ? `${url.slice(0,30)}...` : url %>
                <li class="url-item">
                  <div class="url-info">
                    <a
                      href="/<%= shortcode %>"
                      class="short-url"
                      target="_blank"
                    >
                      <i class="zmdi zmdi-link"></i>
                      <%= host %>/<%= shortcode %>
                    </a>
                    <span class="original-url"><%= truncatedUrl %></span>
                  </div>
                  <div class="url-actions">
                    <button
                      class="copy-btn"
                      data-url="<%= host %>/<%= shortcode %>"
                    >
                      <i class="zmdi zmdi-copy"></i>
                    </button>
                  </div>
                </li>
                <% }) %>
              </ul>
              <% } else { %>
              <p class="empty-list">
                No shortened URLs yet. Create your first one above!
              </p>
              <% } %>
            </div>
          </div>
        </div>
      </section>
    </div>

